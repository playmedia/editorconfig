# editorconfig.org
root = true

[*]
indent_style = spaces
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
indent_style = spaces
indent_size = 2

[*.css]
indent_style = spaces
indent_size = 2

[*.html]
indent_style = spaces
indent_size = 2

[*.handlebars]
indent_style = spaces
indent_size = 2

[*.scss]
indent_style = spaces
indent_size = 2
